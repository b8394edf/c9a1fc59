<Window x:Class="MyWPFApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyWPFApplication"
        mc:Ignorable="d" Height="400" Width="700" ResizeMode="NoResize">
    <DockPanel HorizontalAlignment="Stretch" LastChildFill="False" VerticalAlignment="Stretch">
        <Menu x:Name="menu" DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="Check for Update" Click="ButtonCheckForUpdate_Click"/>
            </MenuItem>
            <MenuItem Header="View"/>
            <MenuItem Header="Team" IsEnabled="False"/>
            <MenuItem Header="Settings"/>
            <MenuItem Header="Help"/>
        </Menu>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Center" Height="32">
            <Button Margin="1, 1" Width="22" Height="22" Content="R" VerticalAlignment="Top" Background="Transparent" BorderThickness="0"/>
            <ComboBox Margin="1, 1" Width="96" Height="22" VerticalAlignment="Top" HorizontalContentAlignment="Center">
                <ComboBoxItem Content="sc-alpha-3.1.0" HorizontalContentAlignment="Center"></ComboBoxItem>
            </ComboBox>
            <ComboBox Margin="1, 1" Width="96" Height="22" VerticalAlignment="Top" HorizontalContentAlignment="Center">
                <ComboBoxItem Content="123456" HorizontalContentAlignment="Center"></ComboBoxItem>
            </ComboBox>
            <ComboBox Margin="1, 1" Width="96" Height="22" VerticalAlignment="Top" HorizontalContentAlignment="Center">
                <ComboBoxItem Content="Development" HorizontalContentAlignment="Center"></ComboBoxItem>
            </ComboBox>
        </StackPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Right" Height="32">
            <Button Margin="1, 1" Width="22" Height="22" Content="E" VerticalAlignment="Top" Background="Transparent" BorderThickness="0"/>
        </StackPanel>
    </DockPanel>
</Window>
