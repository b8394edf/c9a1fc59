<controls:MetroWindow x:Class="WpfApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:converters="clr-namespace:WpfApplication.Converters"
        mc:Ignorable="d"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="ExtraLight"
        TextElement.FontSize="11"
        TextOptions.TextFormattingMode="Display" 
        TextOptions.TextRenderingMode="ClearType"
        FontFamily="Segoe UI Symbol"
        RenderOptions.EdgeMode="Unspecified"
        RenderOptions.BitmapScalingMode="HighQuality"
        SnapsToDevicePixels="False"
        UseLayoutRounding="True"
        GlowBrush="Black"
        ResizeBorderThickness="1" BorderThickness="1"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" AllowsTransparency="True" Background="{DynamicResource MaterialDesignPaper}"
        Name="WpfApplication"
        Width="600" Height="900" MinWidth="600" MinHeight="600 " >
    <Grid>
        <materialDesign:DialogHost Identifier="RootDialog" SnackbarMessageQueue="{Binding ElementName=MainSnackbar, Path=MessageQueue}">
            <materialDesign:DrawerHost IsLeftDrawerOpen="{Binding ElementName=MenuToggleButton, Path=IsChecked}">
                <materialDesign:DrawerHost.LeftDrawerContent>
                    <materialDesign:ColorZone Mode="Light">
                        <DockPanel MinWidth="212" Background="Transparent">
                            <ToggleButton Style="{StaticResource MaterialDesignHamburgerToggleButton}" DockPanel.Dock="Top" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="20" Width="24" Height="24" IsChecked="{Binding ElementName=MenuToggleButton, Path=IsChecked, Mode=TwoWay}"/>
                        </DockPanel>
                    </materialDesign:ColorZone>
                </materialDesign:DrawerHost.LeftDrawerContent>
                <DockPanel LastChildFill="True">
                    <!-- Menu Bar - Start-->
                    <materialDesign:ColorZone Name="MenuBar" Height="42" Padding="6,3" DockPanel.Dock="Top" materialDesign:ShadowAssist.ShadowDepth="Depth2" Mode="PrimaryMid" materialDesign:ShadowAssist.ShadowEdges="Bottom" Width="Auto">
                        <DockPanel>
                            <StackPanel DockPanel.Dock="Left" Orientation="Horizontal" materialDesign:RippleAssist.IsCentered="True">
                                <ToggleButton Margin="10" Style="{StaticResource MaterialDesignHamburgerToggleButton}" IsChecked="False" x:Name="MenuToggleButton" Width="Auto" Height="Auto"/>
                                <!--<TextBlock Margin="10,8" Text="Jira Tool" VerticalAlignment="Bottom" FontSize="16" FontWeight="Regular"/>-->
                                <!--<TextBlock Margin="10,8" Text="Teardropz" VerticalAlignment="Bottom" FontSize="16" FontFamily="Roboto" FontWeight="Regular"/>-->
                                <TextBlock Margin="10,8" Text="Jumping Castle" VerticalAlignment="Bottom" FontSize="16" FontFamily="Roboto" FontWeight="Regular"/>
                                <materialDesign:ColorZone Name="SearchBox" Margin="10,3" Mode="Standard" CornerRadius="3" Panel.ZIndex="1" materialDesign:ShadowAssist.ShadowDepth="Depth1" HorizontalContentAlignment="Left" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                                        Width="{Binding Path=ActualWidth, ElementName=MenuBar, Converter={converters:PercentageConverter}, ConverterParameter='0.4'}" MaxWidth="475">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <Button Style="{DynamicResource MaterialDesignToolButton}">
                                            <materialDesign:PackIcon Margin="5" Kind="Magnify" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch" Width="Auto" Height="Auto"/>
                                        </Button>
                                        <TextBox Margin="10,0" Grid.Column="1" materialDesign:HintAssist.Hint="Search" materialDesign:TextFieldAssist.DecorationVisibility="Hidden" BorderThickness="0" Width="{Binding Path=ActualWidth, ElementName=SearchBox, Converter={converters:PercentageConverter}, ConverterParameter='.78'}" HorizontalAlignment="Left" HorizontalContentAlignment="Stretch" VerticalAlignment="Center"/>
                                    </Grid>
                                </materialDesign:ColorZone>
                            </StackPanel>
                            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" materialDesign:RippleAssist.IsCentered="True">
                                <materialDesign:PopupBox HorizontalAlignment="Right" PopupMode="MouseOver" Width="100">
                                    <StackPanel>
                                        <Button Content="More" />
                                        <Button Content="Options" />
                                    </StackPanel>
                                </materialDesign:PopupBox>
                            </StackPanel>
                        </DockPanel>
                    </materialDesign:ColorZone>
                    <!-- Menu Bar - End-->
                    <Grid Height="Auto" Width="Auto" Background="Transparent">
                    </Grid>
                </DockPanel>
            </materialDesign:DrawerHost>
        </materialDesign:DialogHost>
    </Grid>
</controls:MetroWindow>
 